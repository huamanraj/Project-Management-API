
# Copy this file to .env and update the values

# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=


# JWT Configuration 

JWT_SECRET=project-management-super-secret-jwt-key-for-development-only-change-in-production
JWT_REFRESH_SECRET=project-management-super-secret-refresh-key-for-development-only-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=15
PAYMENT_RATE_LIMIT_MAX=13

# CORS Configuration
# Add your frontend URLs separated by commas
FRONTEND_URL=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Logging Configuration (optional)
LOG_LEVEL=info
LOG_FILE=logs/app.log

